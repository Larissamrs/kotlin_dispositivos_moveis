<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeatherApp"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
        <activity
            android:name=".ui.CityDialog"
            android:exported="false"
            android:label="@string/title_activity_city_dialog"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".ui.MainViewModel"
            android:exported="false"
            android:label="@string/title_activity_main_view_model"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".ui.nav.NavHost"
            android:exported="false"
            android:label="@string/title_activity_nav_host"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".ui.nav.BottomNavItem"
            android:exported="false"
            android:label="@string/title_activity_bottom_nav_item"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".ui.nav.BottomNavBar"
            android:exported="false"
            android:label="@string/title_activity_bottom_nav_bar"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".ui.MapPage"
            android:exported="false"
            android:label="@string/title_activity_map_page"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".ui.ListPage"
            android:exported="false"
            android:label="@string/title_activity_list_page"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".ui.HomePage"
            android:exported="false"
            android:label="@string/title_activity_home_page"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".MainActivity2"
            android:exported="false"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.WeatherApp" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.WeatherApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.WeatherApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>